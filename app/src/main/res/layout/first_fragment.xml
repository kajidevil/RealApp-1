<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#eef3f5">
        </View>
        <TextView
            android:id="@+id/attributesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_1"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"
           android:paddingStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/projectText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/title_2"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />
        <ImageButton
            android:id="@+id/arrowButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/projectText"
            app:layout_constraintBottom_toBottomOf="@id/projectText"
            app:layout_constraintStart_toStartOf="@id/projectText"
            android:layout_marginStart="320dp"
            android:src="@drawable/ic_arrow_up"
            android:background="@null"
            />
        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_2.1"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/projectText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/editText1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_2.1.1"
            android:textColorHint="#648897"
            app:layout_constraintTop_toTopOf="@id/nameText"
            app:layout_constraintBottom_toBottomOf="@id/nameText"
            app:layout_constraintStart_toStartOf="@id/nameText"
            android:layout_marginStart="172dp"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp">
        </EditText>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_2.2"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/nameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/editText1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_2.2.1"
            android:textColorHint="#648897"
            app:layout_constraintTop_toTopOf="@id/emailText"
            app:layout_constraintBottom_toBottomOf="@id/emailText"
            app:layout_constraintStart_toStartOf="@id/emailText"
            android:layout_marginStart="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:inputType="textWebEmailAddress">
        </EditText>

        <TextView
            android:id="@+id/phoneNumberText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_2.3"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/emailText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/editText1.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_2.3.1"
            android:textColorHint="#648897"
            app:layout_constraintTop_toTopOf="@id/phoneNumberText"
            app:layout_constraintBottom_toBottomOf="@id/phoneNumberText"
            app:layout_constraintStart_toStartOf="@id/phoneNumberText"
            android:layout_marginStart="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:inputType="textWebEmailAddress">
        </EditText>

        <TextView
            android:id="@+id/custompolicyText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_3"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberText"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"

            />
        <ImageButton
            android:id="@+id/arrowButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/custompolicyText"
            app:layout_constraintBottom_toBottomOf="@id/custompolicyText"
            app:layout_constraintStart_toStartOf="@id/custompolicyText"
            android:layout_marginStart="320dp"
            android:src="@drawable/ic_arrow_up"
            android:background="@null"
            />
        <TextView
            android:id="@+id/firstNameText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_3.1"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/custompolicyText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/editText2.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_3.1.1"
            android:textColorHint="#648897"
            app:layout_constraintTop_toTopOf="@id/firstNameText"
            app:layout_constraintBottom_toBottomOf="@id/firstNameText"
            app:layout_constraintStart_toStartOf="@id/firstNameText"
            android:layout_marginStart="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:inputType="textPersonName">
        </EditText>
        <TextView
            android:id="@+id/lastNameText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_3.2"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/firstNameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/editText2.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_3.2.1"
            android:textColorHint="#648897"
            app:layout_constraintTop_toTopOf="@id/lastNameText"
            app:layout_constraintBottom_toBottomOf="@id/lastNameText"
            app:layout_constraintStart_toStartOf="@id/lastNameText"
            android:layout_marginStart="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:inputType="textPersonName">
        </EditText>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/lastNameText"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:text="@string/title_3.3"
            android:button="@drawable/custom_checkbox"
            android:paddingStart="12dp"
            android:layout_marginStart="16dp">

        </CheckBox>

        <TextView
            android:id="@+id/carrierText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_4"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/checkbox"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />

        <ImageButton
            android:id="@+id/arrowButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/carrierText"
            app:layout_constraintBottom_toBottomOf="@id/carrierText"
            app:layout_constraintStart_toStartOf="@id/carrierText"
            android:layout_marginStart="320dp"
            android:src="@drawable/ic_arrow_up"
            android:background="@null" />

        <TextView
            android:id="@+id/carriernameText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_4.1"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/carrierText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/editText4.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_4.1.1"
            android:textColorHint="#648897"
            app:layout_constraintTop_toTopOf="@id/carriernameText"
            app:layout_constraintBottom_toBottomOf="@id/carriernameText"
            app:layout_constraintStart_toStartOf="@id/carriernameText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"

            android:layout_marginStart="172dp">
        </EditText>

        <TextView
            android:id="@+id/guidetext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/title_4.2"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            app:layout_constraintTop_toBottomOf="@id/carriernameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/editText4.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_4.2.1"
            android:textColorHint="#648897"
            app:layout_constraintTop_toTopOf="@id/guidetext"
            app:layout_constraintBottom_toBottomOf="@id/guidetext"
            app:layout_constraintStart_toStartOf="@id/guidetext"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="172dp">
        </EditText>

        <TextView
            android:id="@+id/scopeofworktext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/title_5"
            android:textSize="14sp"
            android:textColor="#648897"
            android:fontFamily="@font/roboto_flex"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/guidetext"
            />
        <Button
            android:id="@+id/btnSelectFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scopeofworktext"
            android:background="@color/white"
            android:text="@string/title_5.1">
        </Button>

        <TextView
            android:id="@+id/sow_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_6"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnSelectFile"
            android:layout_marginTop="16dp"
            android:paddingStart="32dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_flex"
            android:background="@drawable/bg_rounded_textview">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sow_doc"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/sow_doc"
            android:layout_marginStart="8dp"
            android:src="@drawable/icon_16x16"
            ></ImageView>
        <View
            android:id="@+id/backlast"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/sow_doc"
            android:layout_marginTop="24dp"
            ></View>
        
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/backlast"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@id/backlast"
           android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@id/backlast"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@id/backlast"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_rounded_back"
            android:text="NEXT"
            android:textColor="@color/white"
            ></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
