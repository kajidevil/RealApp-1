<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background">

        <TextView
            android:id="@+id/by_changing_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_rounded_textview"
            android:fontFamily="@font/roboto_flex"
            android:paddingStart="32dp"
            android:paddingVertical="8dp"
            android:paddingEnd="8dp"
            android:text="@string/by_changing_the_address"
            android:textSize="12sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:src="@drawable/icon_16x16"
            app:layout_constraintStart_toStartOf="@id/by_changing_address"
            android:paddingStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/by_changing_address"
            app:layout_constraintTop_toTopOf="@id/by_changing_address"/>

        <TextView
            android:id="@+id/claiminfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_flex"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="24dp"
            android:text="@string/claim_info"
            android:textColor="@color/main_textcolor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/by_changing_address"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/roboto_flex"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingVertical="16dp"
            android:text="@string/address"
            android:textColor="@color/main_textcolor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/claiminfo"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/address_expandable_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:paddingVertical="12dp"
            android:background="@null"
            android:src="@drawable/ic_arrow_down"
            android:scaleType="fitEnd"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/address"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandableContent4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.4"
                android:orientation="vertical"/>


            <TextView
                android:id="@+id/house_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_flex"
                android:paddingVertical="20dp"
                android:paddingStart="16dp"
                android:layout_marginEnd="4dp"
                android:text="@string/house"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/middle_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/enter_house_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/enter_house_number"
                android:inputType="textPersonName"
                android:textColorHint="@color/main_textcolor"
                app:layout_constraintBottom_toBottomOf="@id/house_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/middle_guideline"
                app:layout_constraintTop_toTopOf="@id/house_TV" />


            <TextView
                android:id="@+id/street_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_flex"
                android:paddingVertical="20dp"
                android:paddingStart="16dp"
                android:layout_marginEnd="4dp"
                android:text="@string/street"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/middle_guideline"
                app:layout_constraintTop_toBottomOf="@id/house_TV" />

            <EditText
                android:id="@+id/enter_streetET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/enter_street"
                android:inputType="textWebEmailAddress"
                android:textColorHint="@color/main_textcolor"
                app:layout_constraintBottom_toBottomOf="@id/street_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/middle_guideline"
                app:layout_constraintTop_toTopOf="@id/street_TV" />

            <TextView
                android:id="@+id/city_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_flex"
                android:paddingVertical="20dp"
                android:paddingStart="16dp"
                android:layout_marginEnd="4dp"
                android:text="@string/city"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/middle_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/street_TV" />

            <EditText
                android:id="@+id/enter_city_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/enter_city"
                android:inputType="textWebEmailAddress"
                android:textColorHint="@color/main_textcolor"
                app:layout_constraintBottom_toBottomOf="@id/city_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/middle_guideline"
                app:layout_constraintTop_toTopOf="@id/city_TV" />

            <TextView
                android:id="@+id/state_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_flex"
                android:paddingVertical="20dp"
                android:paddingStart="16dp"
                android:layout_marginEnd="4dp"
                android:text="@string/state"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/middle_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/city_TV" />

            <EditText
                android:id="@+id/enter_state_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/enter_state"
                android:textColorHint="@color/main_textcolor"
                app:layout_constraintBottom_toBottomOf="@id/state_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/middle_guideline"
                app:layout_constraintTop_toTopOf="@id/state_TV" />

            <TextView
                android:id="@+id/postal_code_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_flex"
                android:paddingVertical="20dp"
                android:paddingStart="16dp"
                android:layout_marginEnd="4dp"
                android:text="@string/postal_code"
                android:textColor="@color/main_textcolor"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/middle_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/state_TV" />

            <EditText
                android:id="@+id/enter_postal_code_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/enter_postal_code"
                android:textColorHint="@color/main_textcolor"
                app:layout_constraintBottom_toBottomOf="@id/postal_code_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/middle_guideline"
                app:layout_constraintTop_toTopOf="@id/postal_code_TV" />

            <Button
                android:id="@+id/btnGetLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="@id/expandableContent4"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/enter_postal_code_ET"
                android:text="@string/use_my_location"
                android:paddingVertical="16dp"
                android:paddingHorizontal="81dp"
                android:drawableStart="@drawable/gps_icon"
                android:drawablePadding="4dp"
                android:background="@color/main_background"
                android:textColor="@color/primary_800"
                android:gravity="center|start" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/loss_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/roboto_flex"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:paddingStart="16dp"
            android:paddingVertical="16dp"
            android:text="@string/loss_types"
            android:textColor="@color/main_textcolor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expandableContent4"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/loss_types_expandable_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:paddingVertical="12dp"
            android:background="@null"
            android:src="@drawable/ic_arrow_down"
            android:scaleType="fitEnd"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/loss_types"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/loss_types"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expandableContent5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loss_types">

        <Button
            android:id="@+id/water_loss_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="@id/expandableContent5"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/loss_water"
            android:paddingStart="12dp"
            android:text="@string/water"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/hide_bg"
            app:layout_constraintTop_toTopOf="@id/water_loss_btn"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="@id/expandableContent6"
            app:layout_constraintEnd_toEndOf="@id/expandableContent6"
            app:layout_constraintBottom_toBottomOf="@id/expandableContent6"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandableContent6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/water_loss_btn"
            >

            <TextView
                android:id="@+id/category_of_water_TV"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/expandableContent6"
                android:background="@drawable/water_text_bg"
                android:fontFamily="@font/roboto_flex"
                android:paddingStart="32dp"
                android:paddingVertical="8dp"
                android:paddingEnd="8dp"
                android:text="@string/catergory_water_exp_text"
                android:textSize="12dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:src="@drawable/blue_16"
                app:layout_constraintStart_toStartOf="@id/category_of_water_TV"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/category_of_water_TV"
                app:layout_constraintTop_toTopOf="@id/category_of_water_TV"/>

            <TextView
                android:id="@+id/cat_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_of_water"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/main_textcolor"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_flex"
                app:layout_constraintTop_toBottomOf="@id/category_of_water_TV"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/cat_1_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cat_water"
                android:background="@drawable/button_border_selector"
                android:paddingStart="12dp"
                android:text="@string/cat_one"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                />
            <Button
                android:id="@+id/cat_2_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cat_1_btn"
                android:background="@drawable/button_border_selector"
                android:paddingStart="12dp"
                android:text="@string/cat_two"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                />
            <Button
                android:id="@+id/cat_3_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/cat_2_btn"
                android:background="@drawable/button_border_selector"
                android:paddingStart="12dp"
                android:text="@string/cat_three"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                />

            <LinearLayout
                android:id="@+id/class_not_defined_btn_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/cat_3_btn"
                android:orientation="vertical"
                android:background="@drawable/button_border_selector"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/main_text_not_defined_btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_not_defined"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sub_text_not_defined_btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_not_defined_2"
                    android:textSize="12sp"
                    android:textColor="@color/main_textcolor" />

            </LinearLayout>

            <TextView
                android:id="@+id/class_of_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_of_water"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/main_textcolor"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_flex"
                app:layout_constraintTop_toBottomOf="@id/class_not_defined_btn_one"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/class_1_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/class_of_water"
                android:background="@drawable/button_border_selector"
                android:paddingStart="12dp"
                android:text="@string/class_one"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                />

            <Button
                android:id="@+id/class_2_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/class_1_btn"
                android:background="@drawable/button_border_selector"
                android:paddingStart="12dp"
                android:text="@string/class_two"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                />
            <Button
                android:id="@+id/class_3_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/class_2_btn"
                android:background="@drawable/button_border_selector"
                android:paddingStart="12dp"
                android:text="@string/class_three"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                />

            <Button
                android:id="@+id/class_4_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@+id/class_3_btn"
                android:background="@drawable/button_border_selector"
                android:paddingStart="12dp"
                android:text="@string/class_four"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:gravity="start|center_vertical"
                />

            <LinearLayout
                android:id="@+id/class_not_defined_btn_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="@id/expandableContent6"
                app:layout_constraintTop_toBottomOf="@id/class_4_btn"
                android:orientation="vertical"
                android:background="@drawable/button_border_selector"
                android:padding="12dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/main_text_not_defined_btn_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_not_defined"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sub_text_not_defined_btn_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_not_defined_2"
                    android:textSize="12sp"
                    android:textColor="@color/main_textcolor" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/fire_loss_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/expandableContent6"
            android:background="@drawable/button_border_selector"
            android:drawableStart="@drawable/loss_fire"
            android:paddingStart="12dp"
            android:text="@string/fire"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            />
        <Button
            android:id="@+id/vehicle_loss_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/fire_loss_btn"
            android:background="@drawable/button_border_selector"
            android:drawableStart="@drawable/loss_vehicle"
            android:paddingStart="12dp"
            android:text="@string/vehicle_impact"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            />
        <Button
            android:id="@+id/trauma_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/vehicle_loss_btn"
            android:background="@drawable/button_border_selector"
            android:drawableStart="@drawable/loss_trauma"
            android:paddingStart="12dp"
            android:text="@string/trauma"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            />
        <Button
            android:id="@+id/environmental_loss_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/trauma_btn"
            android:background="@drawable/button_border_selector"
            android:drawableStart="@drawable/loss_environmental"
            android:paddingStart="12dp"
            android:text="@string/environmetal"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            />
        <Button
            android:id="@+id/other_loss_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@+id/environmental_loss_btn"
            android:background="@drawable/button_border_selector"
            android:drawableStart="@drawable/loss_other"
            android:paddingStart="12dp"
            android:text="@string/other"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/expandableContent5"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/backlast"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/expandableContent5"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/nextButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_rounded_back"
            android:text="@string/next"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/backlast"
            app:layout_constraintEnd_toEndOf="@id/backlast"
